{
  "manifest_version": 3,
  "name": "Wi-Fi Speed Tester",
  "version": "1.0",
  "description": "Detects the current Wi-Fi speed.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
